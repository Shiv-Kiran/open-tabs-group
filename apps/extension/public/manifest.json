{
  "manifest_version": 3,
  "name": "Mindweave - AI Tab Manager",
  "description": "Organize tab chaos into focused groups with one click.",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Mindweave",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
